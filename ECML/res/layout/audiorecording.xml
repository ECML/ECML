<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/blue"
     >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/audiobtn" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/startAudioRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="40dp"
            android:text="@string/start_recording_str"
            android:textColor="#ffffff"
            android:textSize="40sp" >
        </TextView>

        <TextView
            android:id="@+id/stopAudioRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/stop_recording_str"
            android:textColor="#ffffff"
            android:textSize="40sp" >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/replayAudioRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/play_last_str"
        android:textColor="#ffffff"
        android:textSize="40sp" >
    </TextView>

    <TextView
        android:id="@+id/pauseReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/pausereplay"
        android:textColor="#ffffff"
        android:textSize="40sp" >
    </TextView>

</LinearLayout>